<div class="container home-container padding">
    <div class="row">
        {{#each Post}}
        <div class="col-lg-6">
            <div class="card card-shadow">
                <div class="card-body">
                    <p>
                    <h2><a href="/posts/{{_id}}">{{title}}</a></h2>
                    </p>
                    <p><strong>Category: </strong>{{category.title}}</p>
                    <p><strong></strong>{{brief_text}}</p>
                    <div class="views">
                        <i class="far fa-eye"></i>
                        {{views}}
                    </div>
                </div>
            </div>
            <br>
        </div>
        {{/each}}
    </div>
</div>